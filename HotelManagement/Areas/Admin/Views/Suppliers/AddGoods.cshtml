@model TbSupplierGoods

@{
    ViewData["Title"] = "Add Goods";
}

<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-9 col-12 mb-2">
            <div class="row breadcrumbs-top">
                <div class="col-12">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="Suppliers" asp-action="AllGoods">Supplier Goods</a>
                            </li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-body">
        <!-- Basic Horizontal form layout section start -->
        <section id="basic-horizontal-layouts">
            <div class="row match-height">
                <div class="col-md-12 col-12">
                    <div>
                        <div class="card-header">
                            <h4 class="card-title">Add New Goods</h4>
                        </div>
                        <div>
                            <div class="card-body">
                                <form class="form form-horizontal" method="post" asp-controller="Suppliers" asp-action="AddGoods">
                                    <div class="form-body">
                                        <div class="row">

                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-8">
                                                        @if (Model == null)
                                                        {
                                                            <input type="hidden" asp-for="SupplierGoodId" value="0" class="form-control">
                                                        }
                                                        else
                                                        {
                                                            <input type="hidden" asp-for="SupplierGoodId" class="form-control">
                                                        }

                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                        <span>Supplier Name</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <select asp-for="SupplierId" asp-items="@(new SelectList(ViewBag.Suppliers,"SupplierId","SupplierName"))" class="form-control">
                                                            <option value="">-- Select Supplier --</option>
                                                        </select>
                                                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                        <span>Category</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <input type="text" asp-for="Category" class="form-control" placeholder="Category">
                                                        <span asp-validation-for="Category" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                        <span>Quantity</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <input type="text" asp-for="Quantity" class="form-control" placeholder="Quantity">
                                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                        <span> Amount Unit</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <input type="Text" asp-for="QuantityUnit" class="form-control" placeholder="Amount Unit">
                                                        <span asp-validation-for="QuantityUnit" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                        <span>Total Price</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <input type="Text" asp-for="Price" class="form-control" placeholder="Price">
                                                        <span asp-validation-for="Price" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                        <span> Date Of Arrival</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <input type="date" asp-for="DateOfArrival" class="form-control" placeholder="Date Of Arrival">
                                                        <span asp-validation-for="DateOfArrival" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12 text-center">
                                                <button type="submit" class="btn btn-primary mr-1 mb-1 waves-effect waves-light">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
