@model ReservationsReportModel


@{
    ViewData["Title"] = "Coming Reservations";
}

<div class="wrapper">


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Coming Reservations Report</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active">Coming Reservations</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">


                    <div class="card">
                        <div class="card-header">
                            <button style="width:100px" class="card-title text-center btn btn-info">Print All</button>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr class="bg-primary text-white">
                                        <th>Arriving Date</th>
                                        <th>Departure Date</th>
                                        <th>Room Number</th>
                                        <th>Room View</th>
                                        <th>Room price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model.Reservations)
                                    {
                                        <tr>
                                            <td>@reservation.ArrivingDate.ToShortDateString()</td>
                                            <td>@reservation.LeavingDate.ToShortDateString()</td>
                                            <td>@reservation.RoomNo</td>
                                            <td>@reservation.RoomView</td>
                                            <td>@reservation.RoomPrice</td>
                                            <td>@reservation.TotalPrice</td>
                                        </tr>
                                    }



                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="5">Total</th>

                                        <th>@Model.Total</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>



</div>
<!-- ./wrapper -->
