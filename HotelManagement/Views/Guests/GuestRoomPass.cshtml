@model RoomPasswordVwModel


@{
    Layout = "";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Hotelio Services</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


</head>
<body style="background: #110f16;">

    <div class="container">
        <h1 class="m-5 text-center" style=" color: #FFFFFF; margin-bottom: 0.5rem; font-weight: 500; line-height: 1.2; ">WE WILL SERVE YOU WITH 1 CLICK</h1>


        <div class="fixed-bg bg-1" style="background-attachment: fixed;
              background-repeat: no-repeat; background-size: cover;
              background-position: center center; height: 400px; width: 100%;
              color: white; text-align: center; display: table;
              background-image: url('https://www.dl.dropboxusercontent.com/s/dk3s266jb5klmba/bg1.jpg'); ">
            <h1 style=" display: table-cell; vertical-align: middle;">Enjoy Your life</h1>
        </div>

        <footer class="bg-dark text-center text-white">
            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: Form -->
                <section class="">
                    <form asp-controller="Guests" asp-action="GuestServices" role="form" method="post">
                        <!--Grid row-->
                        <div class="row d-flex justify-content-center">
                            <!--Grid column-->
                            <div class="col-auto">
                                <p class="pt-2">
                                    <strong>Enter room password</strong>
                                </p>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-5 col-12">
                                <!-- Email input -->
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="RoomPassword" type="password" class="form-control" />
                                    <span asp-validation-for="RoomPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-auto">
                                <!-- Submit button -->
                                <button type="submit" class="btn btn-outline-light mb-4">Go Now</button>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </form>
                </section>
                <!-- Section: Form -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2022 Copyright:
                <a class="text-white" href="https://mdbootstrap.com/">Hotelio.com</a>
            </div>
            <!-- Copyright -->
        </footer>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


</body>
</html>



