@model RoomPasswordVwModel



@{
    Layout = "";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Hotelio Services</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


</head>
<body style="background: #110f16;">
    <div class="container">
        <h1 class="m-5 text-center" style=" color: #FFFFFF; margin-bottom: 0.5rem; font-weight: 500; line-height: 1.2; ">WE WILL SERVE YOU WITH 1 CLICK</h1>
        <div class="card mb-3" style="box-shadow: 0 4px 21px -12px rgba(0, 0, 0, 0.66); border-radius: 10px; background-color: #18151f; ">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img style="border-radius: 10px;" src="~/images/bg/f2.jpg" width="404" height="270" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body" style="color: #FFFBFF; ">
                        <h4 class="card-title">Food Order</h4>
                        <p class="card-text">You can order whatever food you want . The food will be delivered to your room and payment can be made upon completion of the reservation. Please if you want to order food, press the button</p>
                        <p class="card-text"><small class="text-muted">You will receive food after 30 mins</small></p>
                        <a asp-controller="Food" asp-action="FoodList" asp-route-roompass="@Model.RoomPassword" class="btn btn-outline-primary text-white">Order Now</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3" style="box-shadow: 0 4px 21px -12px rgba(0, 0, 0, 0.66); border-radius: 10px; background-color: #18151f; ">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img style="border-radius: 10px; " src="~/images/bg/hk1.jpg" width="404" height="270" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body" style="color: #FFFBFF; ">
                        <h4 class="card-title">Cleaning the Room</h4>
                        <p class="card-text">You can request that your room be cleaned at the time you want and whenever you want. Please if you want to Clean your room, press the button</p>
                        <p class="card-text"><small class="text-muted">Room service will arrive in 30 mins</small></p>
                        <a asp-controller="RoomService" asp-action="RequestRoomService" asp-route-roompass="@Model.RoomPassword" class="btn btn-outline-primary text-white">Request Now</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer class=" text-center text-white">
        <!-- Copyright -->
        <div class="text-center p-3">
            © 2022 Copyright:
            <a class="text-white" href="https://mdbootstrap.com/">Hotelio.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

</body>
</html>
