@model TbFood



<!-- Start main Content -->
<div class="maincontent bg--white pt--80 pb--55">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12">
                <div class="wn__single__product">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <div class="wn__fotorama__wrapper">
                                <div class="fotorama wn__fotorama__action" data-nav="thumbs">
                                    <a href="1.jpg"><img src="@string.Format("/Uploads/{0}",Model.FoodImage)" alt=""></a>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="product__info__main">
                                <h1>@Model.FoodName</h1>
                                <div class="product-reviews-summary d-flex">
                                    <ul class="rating-summary d-flex">
                                        <li><i class="zmdi zmdi-star-outline"></i></li>
                                        <li><i class="zmdi zmdi-star-outline"></i></li>
                                        <li><i class="zmdi zmdi-star-outline"></i></li>
                                        <li class="off"><i class="zmdi zmdi-star-outline"></i></li>
                                        <li class="off"><i class="zmdi zmdi-star-outline"></i></li>
                                    </ul>
                                </div>
                                <div class="price-box">
                                    <span>@Model.FoodPrice</span>
                                </div>
                                <div class="product__overview">
                                    <p>@Model.FoodDescription Ideal for cold-weather training or work outdoors, the Chaz Hoodie promises superior warmth with every wear. </p>
                                </div>
                                <div class="box-tocart d-flex pt-4">
                                    <div class="addtocart__actions">
                                        <a style="background-color :#e59285; color:white;" class="btn"  asp-controller="Food" asp-action="AddOrder" asp-route-Id="@Model.FoodId">Add To Order</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- End main Content -->
