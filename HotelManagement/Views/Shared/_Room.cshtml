@model TbRooms


<!-- Start Single Product -->
<div class="product product__style--3">
    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
        <div class="product__thumb">
            <a class="first__img" asp-controller="Rooms" asp-action="ShowRoom" asp-route-Id="@Model.RoomId">
                <img src="@string.Format("/Uploads/{0}",Model.ImageName)" width="200" height="300" alt="product image">
            </a>
            <a class="second__img animation1" asp-controller="Rooms" asp-action="ShowRoom" asp-route-Id="@Model.RoomId">
                <img src="@string.Format("/Uploads/{0}",Model.ImageName)" width="200" height="300" alt="product image">
            </a>
            <div class="hot__box">
                <span class="hot-label">@Model.RoomView</span>
            </div>
        </div>
        <div class="product__content content--center">
            <h4>
                <a asp-controller="Rooms" asp-action="ShowRoom" asp-route-Id="@Model.RoomId">
                    @Model.NoOfBeds beds for @Model.NoOfPersons Persons
                </a>
            </h4>
            <ul class="prize d-flex">
                <li>@Model.RoomPrice</li>
                <li>per Night</li>
            </ul>
            <div class="action">
                <div class="actions_inner">
                    <ul class="d-flex justify-content-center">
                        <li>
                            <a title="Reserve Now" class="btn btn-warning btn-sm pr-3 mr-2"
                               asp-controller="Reservations" asp-action="ReservNow" asp-route-Id="@Model.RoomId">Reserve</a>
                        </li>
                        <li>
                            <a title="Show Room Details" class="btn btn-primary btn-sm pr-3 text-white"
                               asp-controller="Rooms" asp-action="ShowRoom" asp-route-Id="@Model.RoomId">Show</a>
                        </li>
                    </ul>
                </div>
            </div>

            @*<div class="product__hover--content">
                    <ul class="rating d-flex">
                        <li class="on"><i class="fa fa-star-o"></i></li>
                        <li class="on"><i class="fa fa-star-o"></i></li>
                        <li class="on"><i class="fa fa-star-o"></i></li>
                        <li><i class="fa fa-star-o"></i></li>
                        <li><i class="fa fa-star-o"></i></li>
                    </ul>
                </div>*@
        </div>
    </div>
</div>
